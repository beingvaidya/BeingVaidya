<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.auth.DoctorRegistration">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
<!--    android:background="@drawable/register_bg"-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Registration"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24sp"
            android:layout_margin="24dp"
            android:gravity="start"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_baseline_camera_alt_24"
            app:tint="@color/white"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/green_700"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Name*"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/round_corner_white_background"
            android:padding="12dp"/>

        <Spinner
            android:id="@+id/sp_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:entries="@array/sp_degree"
            android:background="@drawable/round_corner_white_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Ph no*"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/round_corner_white_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Mail*"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:background="@drawable/round_corner_white_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="Specialization*"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/round_corner_white_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:hint="University*"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/round_corner_white_background"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/et_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:inputType="number"
            android:hint="Pincode* (Where you practise)"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/round_corner_white_background"
            android:padding="12dp"/>

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Submit"/>


    </LinearLayout>

    </ScrollView>

</FrameLayout>